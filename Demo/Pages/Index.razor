@page "/"

<h1>TeraWord MapD3</h1>

<div style="border:1px solid silver;">
    <MapD3 @ref=MapD3
           ID="MapID00001"
           ZoomEnabled=true
           ShowControls=true
           Width=1024
           Height=500
           OnNodeClick=OnNodeClick
           Data=Data />
